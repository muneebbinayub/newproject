<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="home">
        <form action="/" method="post" id="login">
            <h1>Add Member</h1>
            <div class="login-main">
                <h3>Name</h3>
                <input type="text" name="name" placeholder="Enter Name"  id="name" required>
            </div>
            <div class="login-main">
                <h3>Balance</h3>
                <input type="number" name="balance"  placeholder="Enter Balance" id="balance" required>
            </div>
            <div class="login-main">
                <h3>Monthly</h3>
                <input type="number" name="monthly"  placeholder="Enter Monthly" id="monthly" required>
            </div>
            <button id="btnn" class="btn">Submit</button>
        </form>
        <p id="warning"><%=warning%></p>
    </div>
    <script>
        var warning = document.getElementById('warning');
        setTimeout(() => {
            warning.style.display='none';
        }, 4000);
    </script>
</body>
</html>